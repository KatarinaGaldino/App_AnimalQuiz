<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.pacote.animalquiz">

    <application
        android:allowBackup="true"
        android:icon="@drawable/caticon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/caticon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait"
            >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RespostaActivity"
            android:screenOrientation="portrait"
            />
        <activity android:name=".EscolhaActivity"
            android:screenOrientation="portrait"
            />
        <activity android:name=".GenericaActivity"
            android:screenOrientation="portrait"
            ></activity>
    </application>

</manifest>